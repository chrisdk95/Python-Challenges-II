# Write your every_other_letter function here:
def every_other_letter(word):
  empty = ""
  for letter in range(0, len(word), 2):
    empty += word[letter]
  return empty

# Test
print(every_other_letter("Codecademy"))
# should print Cdcdm
print(every_other_letter("Hello world!"))
# should print Hlowrd
print(every_other_letter(""))
# should print 
